{
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "cmd": "terraform fmt -- `find ./ -type f -name '*.tf'`",
                "match": "\\.tf$",
                "isAsync": true
            },
            {
                "cmd": "gofmt -w .",
                "match": "\\.go$",
                "isAsync": true
            }
        ]
    }
}